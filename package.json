    "@types/react": "^15.0.39",
    "@types/react-router": "^4.0.14",
    "@types/react-router-dom": "^4.0.7",
    "awesome-typescript-loader": "^3.2.2",
    "browser-sync": "^2.18.13",
    "connect-modrewrite": "^0.10.1",
    "create-react-class": "^15.6.0",
    "jest": "^20.0.4",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.5.10",
    "proxy-middleware": "^0.15.0",
    "ts-jest": "^20.0.7",
    "typescript": "2.4.2",
    "webpack": "^3.4.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
